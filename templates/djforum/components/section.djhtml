{% if section %}
  <a class="badge bg-secondary text-decoration-none mx-2"
     href="{% url 'djforum:topic-list' %}?section={{ section | iriencode }}"
  >
    {{ section }}
    <span class="badge bg-light text-dark">{{ section.count_topics }}</span>
  </a>
{% else %}
  <a class="badge bg-secondary text-decoration-none mx-2"
     href="{% url 'djforum:topic-list' %}"
  >
    * <span class="badge bg-light text-dark">???</span>
  </a>
{% endif %}
