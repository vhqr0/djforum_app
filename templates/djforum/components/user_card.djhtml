<div class="card">
  {% include "djforum/components/avatar.djhtml" with user=user %}
  <div class="card-body">
    <h5 class="card-title">
      {% if user and user.is_authenticated %}
        <a class="text-black text-decoration-none text-truncate"
           href="{% url 'djforum:user-detail' user.pk %}"
        >
          {{ user }}
        </a>
      {% else %}
        *
      {% endif %}
    </h5>
  </div>
</div>
