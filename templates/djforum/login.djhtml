{% extends "./base.djhtml" %}

{% block title %}
    DJForum Login
{% endblock %}

{% block body %}
    <form action="{{ request.get_full_path }}" method="POST">
        {% csrf_token %}
        <fieldset>
            <legend>Login</legend>
            {{ form.as_p }}
        </fieldset>
        <input class="btn btn-primary" type="submit" />
    </form>
{% endblock %}
